{
  // ==================================================
  // UNIFIED VS CODE LAUNCH CONFIGURATION - Docker-First
  // ==================================================
  // Optimized for zer0-mistakes Jekyll theme development
  // Last Updated: 2025-10-26
  
  "version": "0.2.0",
  "configurations": [
    
    // ==========================================
    // DOCKER DEVELOPMENT CONFIGURATIONS
    // ==========================================
    {
      "name": "ï¿½ Debug Zer0-Mistakes Theme (Docker)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Docker: Compose Up (Detached)",
      "postDebugTask": "Docker: Compose Stop",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"],
      "internalConsoleOptions": "openOnSessionStart",
      "trace": {
        "stdio": true,
        "logFile": "${workspaceFolder}/logs/debug-trace.log"
      },
      "pathMapping": {
        "/": "${workspaceFolder}/_site/",
        "/assets/": "${workspaceFolder}/assets/",
        "/js/": "${workspaceFolder}/assets/js/",
        "/css/": "${workspaceFolder}/assets/css/"
      }
    },

    {
      "name": "ðŸ”— Attach to Running Jekyll Theme (Docker)",
      "type": "msedge", 
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"],
      "internalConsoleOptions": "openOnSessionStart",
      "urlFilter": "localhost:4000*",
      "trace": {
        "stdio": true,
        "logFile": "${workspaceFolder}/logs/debug-attach-trace.log"
      },
      "pathMapping": {
        "/": "${workspaceFolder}/_site/",
        "/assets/": "${workspaceFolder}/assets/",
        "/js/": "${workspaceFolder}/assets/js/",
        "/css/": "${workspaceFolder}/assets/css/"
      }
    },

    {
      "name": "ðŸ”„ Docker Rebuild & Debug Theme",
      "type": "msedge",
      "request": "launch", 
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Docker: Rebuild (Force)",
      "postDebugTask": "Docker: Compose Down",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--disable-web-security",
        "--auto-open-devtools-for-tabs"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"],
      "internalConsoleOptions": "openOnSessionStart",
      "trace": {
        "stdio": true,
        "logFile": "${workspaceFolder}/logs/debug-rebuild-trace.log"
      },
      "pathMapping": {
        "/": "${workspaceFolder}/_site/",
        "/assets/": "${workspaceFolder}/assets/",
        "/js/": "${workspaceFolder}/assets/js/",
        "/css/": "${workspaceFolder}/assets/css/"
      }
    },

    // ==========================================
    // GEM DEVELOPMENT CONFIGURATIONS
    // ==========================================
    {
      "name": "ðŸš€ Gem Publisher: Patch Release",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/gem-publish.sh",
      "args": ["patch"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/bin/bash",
      "env": {
        "PATH": "${env:PATH}",
        "TERM": "xterm-256color"
      },
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    },

    {
      "name": "ï¿½ Gem Publisher: Dry Run (Patch)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/gem-publish.sh",
      "args": ["patch", "--dry-run"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/bin/bash",
      "env": {
        "PATH": "${env:PATH}",
        "TERM": "xterm-256color"
      },
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    },

    // ==========================================
    // MOBILE & RESPONSIVE TESTING
    // ==========================================
    {
      "name": "ï¿½ Mobile Debug (Docker)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Docker: Compose Up (Detached)",
      "postDebugTask": "Docker: Compose Stop",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--device-scale-factor=2",
        "--force-device-scale-factor=2",
        "--user-agent=Mozilla/5.0 (iPhone; CPU iPhone OS 15_0 like Mac OS X) AppleWebKit/605.1.15 (KHTML, like Gecko) Version/15.0 Mobile/15E148 Safari/604.1"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "pathMapping": {
        "/": "${workspaceFolder}/_site/",
        "/assets/": "${workspaceFolder}/assets/",
        "/js/": "${workspaceFolder}/assets/js/",
        "/css/": "${workspaceFolder}/assets/css/"
      }
    }
  ]
}
