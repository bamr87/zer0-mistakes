{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "msedge",
      "request": "launch",
      "name": "üöÄ Edge: Debug Jekyll with Console Integration",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Docker: Compose Up (Detached)",
      "postDebugTask": "Docker: Compose Stop",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "trace": {
        "stdio": true,
        "logFile": "${workspaceFolder}/logs/debug-trace.log"
      },
      "pathMapping": {
        "/": "${workspaceFolder}/_site/",
        "/assets/": "${workspaceFolder}/assets/",
        "/js/": "${workspaceFolder}/assets/js/",
        "/css/": "${workspaceFolder}/assets/css/"
      }
    },
    {
      "type": "msedge",
      "request": "attach",
      "name": "üîó Edge: Attach to Running Jekyll (Console)",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "urlFilter": "localhost:4000*",
      "trace": {
        "stdio": true,
        "logFile": "${workspaceFolder}/logs/debug-attach-trace.log"
      },
      "pathMapping": {
        "/": "${workspaceFolder}/_site/",
        "/assets/": "${workspaceFolder}/assets/",
        "/js/": "${workspaceFolder}/assets/js/",
        "/css/": "${workspaceFolder}/assets/css/"
      }
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "üîß Edge: Debug + Rebuild Jekyll Site",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Docker: Rebuild (Force)",
      "postDebugTask": "Docker: Compose Down",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--disable-web-security",
        "--auto-open-devtools-for-tabs"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "trace": {
        "stdio": true,
        "logFile": "${workspaceFolder}/logs/debug-rebuild-trace.log"
      },
      "pathMapping": {
        "/": "${workspaceFolder}/_site/",
        "/assets/": "${workspaceFolder}/assets/",
        "/js/": "${workspaceFolder}/assets/js/",
        "/css/": "${workspaceFolder}/assets/css/"
      }
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "üì± Edge: Mobile Debug (Responsive Testing)",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Docker: Compose Up (Detached)",
      "postDebugTask": "Docker: Compose Stop",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--device-scale-factor=2",
        "--force-device-scale-factor=2",
        "--user-agent=Mozilla/5.0 (iPhone; CPU iPhone OS 15_0 like Mac OS X) AppleWebKit/605.1.15 (KHTML, like Gecko) Version/15.0 Mobile/15E148 Safari/604.1"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "pathMapping": {
        "/": "${workspaceFolder}/_site/",
        "/assets/": "${workspaceFolder}/assets/",
        "/js/": "${workspaceFolder}/assets/js/",
        "/css/": "${workspaceFolder}/assets/css/"
      }
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "üéØ Edge: Performance Debug Mode",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Docker: Compose Up (Detached)",
      "postDebugTask": "Docker: Compose Stop",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--enable-logging=stderr",
        "--log-level=0",
        "--enable-features=NetworkService,NetworkServiceLogging"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "trace": {
        "stdio": true,
        "logFile": "${workspaceFolder}/logs/performance-debug.log"
      },
      "pathMapping": {
        "/": "${workspaceFolder}/_site/",
        "/assets/": "${workspaceFolder}/assets/",
        "/js/": "${workspaceFolder}/assets/js/",
        "/css/": "${workspaceFolder}/assets/css/"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üöÄ Gem Publisher: Patch Release",
      "program": "${workspaceFolder}/scripts/gem-publish.sh",
      "args": ["patch"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/bin/bash",
      "env": {
        "PATH": "${env:PATH}",
        "TERM": "xterm-256color"
      },
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üöÄ Gem Publisher: Minor Release",
      "program": "${workspaceFolder}/scripts/gem-publish.sh",
      "args": ["minor"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/bin/bash",
      "env": {
        "PATH": "${env:PATH}",
        "TERM": "xterm-256color"
      },
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üöÄ Gem Publisher: Major Release",
      "program": "${workspaceFolder}/scripts/gem-publish.sh",
      "args": ["major"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/bin/bash",
      "env": {
        "PATH": "${env:PATH}",
        "TERM": "xterm-256color"
      },
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üîç Gem Publisher: Dry Run (Patch)",
      "program": "${workspaceFolder}/scripts/gem-publish.sh",
      "args": ["patch", "--dry-run"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/bin/bash",
      "env": {
        "PATH": "${env:PATH}",
        "TERM": "xterm-256color"
      },
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "‚ö° Gem Publisher: Quick Build & Test",
      "program": "${workspaceFolder}/scripts/gem-publish.sh",
      "args": ["patch", "--skip-publish", "--no-github-release"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/bin/bash",
      "env": {
        "PATH": "${env:PATH}",
        "TERM": "xterm-256color"
      },
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üìù Gem Publisher: Changelog Preview",
      "program": "${workspaceFolder}/scripts/gem-publish.sh",
      "args": ["patch", "--skip-tests", "--skip-publish", "--no-github-release", "--dry-run"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/bin/bash",
      "env": {
        "PATH": "${env:PATH}",
        "TERM": "xterm-256color"
      },
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
